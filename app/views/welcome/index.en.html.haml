      $("nav").css('background', 'white')
      $(".navbar-brand").css('color', '#777777')
      $(".navbar-nav > li > a").css('color', '#777777')
    } else {
      $("nav").css('background', 'transparent')
      $(".navbar-brand").css('color', 'white')
      $(".navbar-nav > li > a").css('color', 'white')
    }
  });
