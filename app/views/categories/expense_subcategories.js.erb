$(".sub_category.expense_category").html("<%=j(render 'records/subcategories', subcategories: @subcategories) %> ");

$("tbody.sub_category.expense_category tr td").bind("click", function(event) {
  if ($(this).data('subcategory-id')) {
    $("tbody.sub_category.expense_category tr td.active").attr("class", "");
    $(this).attr("class", "active");
    $('#record_sub_category').val($(this).data('subcategory-id'));
  }
});

$('#record_sub_category').val('<%= @subcategories[0][0].hash_key %>');